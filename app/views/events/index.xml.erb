<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<WWW xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Checksum><%= Digest::MD5.hexdigest @events_hash.to_s %></Checksum>

  <% @events_hash.each do |day, events| %>

    <%= "<#{day}>".html_safe %>
      <% events.each do |event_hash| %>

        <Event>
          <% event_hash.each do |attribute, value| %>
            <<%= "#{attribute}" %>>
              <%= value %>
            </<%= "#{attribute}" %>>
          <% end %>
        </Event>

      <% end %>
    <%= "</#{day}>".html_safe %>

  <% end %>
</WWW>
