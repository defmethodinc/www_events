<script type="text/javascript">
$(document).ready(function(){

  $("#event_event_description").on('input', function() {
    var length = $(this).val().length
    $('#discription-length').text(length + ' letters.')

    if(length < 11) {
      $('#discription-comment').html("🤔 is that enough?")
    } else if(length < 251) {
      $('#discription-comment').html("😁 Short and sweet! This REALLY helps us save printing paper!")
    } else if(length < 401) {
      $('#discription-comment').html("👍 Good size. Short descriptions help us save on printing paper.")
    } else {
      $('#discription-comment').html("This is a long description. We may shorten it for print.")
    }
  });

});
</script>
